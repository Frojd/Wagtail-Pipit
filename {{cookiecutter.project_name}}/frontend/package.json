{
    "name": "frontend_nextjs",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev -p {{cookiecutter.nextjs_port}}",
        "build": "next build",
        "build:local": "IGNORE_SENTRY=1 next build",
        "start": "next start -p {{cookiecutter.nextjs_port}}",
        "export": "next export",
        "storybook": "storybook dev -p 3001",
        "build-storybook": "storybook build",
        "fixcode": "npx prettier \"**/*(*.css|*.js|*.json|*.md|*.scss)\" --write",
        "new": "node cli/bin.js new",
        "new:container": "node cli/bin.js new --container",
        "test": "jest --watch",
        "test:ci": "npx jest --ci --runInBand --reporters=default --reporters=jest-junit"
    },
    "dependencies": {
        "@sentry/nextjs": "^7.56.0",
        "@types/react": "^18.2.14",
        "classnames": "^2.3.2",
        "i18next": "^23.1.0",
        "next": "13.4.7",
        "next-i18next": "^14.0.0",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "18.2.0",
        "react-i18next": "^13.0.1"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern 'frontend/**' && jest --onlyChanged",
            "pre-push": ""
        }
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^7.0.22",
        "@storybook/addon-actions": "^7.0.24",
        "@storybook/addon-backgrounds": "^7.0.22",
        "@storybook/addon-viewport": "^7.0.24",
        "@storybook/addons": "^7.0.24",
        "@storybook/nextjs": "^7.0.22",
        "@storybook/react": "^7.1.0",
        "@swc/core": "^1.3.66",
        "@swc/jest": "^0.2.26",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "cross-env": "^7.0.3",
        "css-loader": "^6.8.1",
        "eslint": "8.43.0",
        "eslint-config-next": "13.4.7",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "jest-junit": "^16.0.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "react-test-renderer": "^18.2.0",
        "storybook": "^7.0.22",
        "style-loader": "^3.3.3"
    }
}
